{% extends 'base.html.twig' %}

{% block title %}
  Modifier le joueur
{% endblock %}

{% block body %}
  <div class="bg-lightbluelec min-h-screen py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md mx-auto bg-white dark:bg-gray-800 p-8 rounded-lg shadow-lg">
      <h1 class="text-3xl font-bold text-center text-gray-800 dark:text-white mb-6">Modifier un joueur</h1>
{{ form_start(form) }}

<div class="space-y-4 text-gray-500">
  {% for field in form %}
    <div>
      {{ form_label(field) }}
      {{ form_widget(field, {'attr': {'class': 'w-full'}}) }}
      {{ form_errors(field) }}
    </div>
  {% endfor %}
</div>

<div class="mt-6">
  <button type="submit" class="w-full px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-semibold rounded-lg">
    Enregistrer les modifications
  </button>
</div>

{{ form_end(form) }}

<form method="post" action="{{ path('player_delete', {'id': player.id}) }}" onsubmit="return confirm('Es-tu sÃ»r de vouloir supprimer ce joueur ?');">
  <input type="hidden" name="_token" value="{{ csrf_token('delete_player_' ~ player.id) }}">
  <button class="mt-4 w-full px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg" type="submit">
    Supprimer ce joueur
  </button>
</form>

    </div>
  </div>
{% endblock %}
