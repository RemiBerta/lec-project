{% extends 'base.html.twig' %}

{% block body %}


    <h1 class="text-center py-12 text-7xl font-bold text-orangelec">{{ player.playerName}}</h1>
  <div class="bg-lightbluelec flex justify-center">
    {% if is_granted('ROLE_ADMIN') %}
    <form method="post" action="{{ path('player_delete', {'id': player.id}) }}" onsubmit="return confirm('Es-tu sûr de vouloir supprimer ce joueur ?');">
     <input type="hidden" name="_token" value="{{ csrf_token('delete_player_' ~ player.id) }}">
      <button type="submit" class="mt-6 px-6 py-4 bg-gray-700 hover:bg-orangelec text-white font-semibold rounded-lg">
        Supprimer
     </button>
    </form>
     <div><a href="{{ path('player_edit', {'id': player.id}) }}" class="block px-4 py-2 mb-5 bg-gray-500 hover:bg-orangelec text-white font-semibold rounded-lg shadow">Modifier le joueur</a></div> 
    {% endif %}

        <div class="bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-700 p-6 shadow-lg rounded-lg hover:shadow-xl transition-all duration-300">
          <h3 class=" text-2xl text-gray-600 dark:text-gray-300 mb-4">Equipe actuelle: <br> {{player.team.name }}</h3>
          <h3 class=" text-2xl text-gray-600 dark:text-gray-300 mb-4">Poste actuel: <br>{{player.role. name }}</h3>
          <p class="text-gray-600 dark:text-gray-300 mb-4">Nom et prénom: <br>{{player.firstName }} {{player.lastName }}</p>
          <p class="text-gray-600 dark:text-gray-300 mb-4">Pays d'origine: <br> {{player.nationality }}</p>
          <img class="mb-4 object-cover rounded-full" src="{{ asset(player.photo) }}" alt="">
          <div class="flex items-center justify-between">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
