{% extends 'base.html.twig' %}

{% block title %}
  {{ parent() }} - Les Equipes
{% endblock %}

{% block body %}
  <div class="bg-lightbluelec">
    <h1 class="text-center py-12 text-7xl font-bold text-white">Les équipes</h1>

    <div class="max-w-[900px] mx-auto flex flex-col justify-between gap-4">
      {% for team in teams %}
        <div class="bg-white dark:bg-gray-700 border border-gray-200 dark:border-gray-700 p-6 shadow-lg rounded-lg hover:shadow-xl transition-all duration-300">
          <h2 class="text-5xl text-center font-bold text-gray-800 dark:text-orangelec mb-2">{{ team.name }}</h2>
          <img src="{{ asset (team.logo) }}" alt="{{ team.name }}" />
          <div class="flex justify-between flex-wrap gap-6">
            {% for player in team.players %}
              <div class="">
                <h3 class="text-3xl text-gray-600 dark:text-white mb-4">{{ player.playerName }}</h3>
                <h4 class="text-2xl text-gray-600 dark:text-gray-300 mb-4">{{ player.role.name }}</h4>
                <p class="text-gray-600 dark:text-gray-300 mb-4">{{ player.firstName }} {{ player.lastName }} - {{ player.nationality }}</p>
              </div>
              <img src="{{ asset (player.photo) }}" alt="{{ player.playerName }}" class="w-32 h-32 object-cover rounded-full" />
            {% endfor %}
          </div>
          {# <div class="flex items-center justify-between">
            <a href="{{ path('player_item', { id: player.id }) }}" class="inline-flex items-center px-6 py-2.5 bg-orangelec text-white font-medium rounded-lg hover:bg-lightbluelec focus:ring-4 focus:ring-blue-300 transition-all duration-200">
              Voir le joueur<svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div> #}
        </div>
      {% else %}
        <div class="p-6 bg-red-100 border border-red-200 rounded-lg">
          <p class="text-red-700 text-lg font-medium">Aucun player trouvé</p>
        </div>
      {% endfor %}
    </div>
  </div>
{% endblock %}
